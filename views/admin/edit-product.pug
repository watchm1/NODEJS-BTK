extends ../layout/main-layout.pug
block styles
    link(rel="stylesheet" href="/css/forms.css")
block content
    form(action="/admin/products", method="POST")
        input(type='hidden' name="id" value=`${product.id}`)
        .form-group.row
            label(for="name").col-sm-2 Name
            .col-sm-10
                input(type="text", name="name" value=`${product.name}`).form-control#name
        .form-group.row
            label(for="price").col-sm-2 Price
            .col-sm-10
                input(type="text", name="price" value=`${product.price}`).form-control#price
        .form-group.row
            label(for="image").col-sm-2 Image
            .col-sm-10
                input(type="text", name="image" value=`${product.image}`).form-control#image
        .form-group.row
            label(for="description").col-sm-2 Description
            .col-sm-10
                textarea.form-control(type="text", name="description" cols="30" rows="10") #{product.description}

        .form-group.row
            .col-sm-10.offset-sm-2 
                input(type="submit", value="Save Product").btn.btn-primary